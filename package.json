{
  "name": "browserless",
  "description": "The Headless Chrome/Chromium perfomance driver for Node.js",
  "homepage": "https://browserless.js.org",
  "version": "",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "contributors": [
